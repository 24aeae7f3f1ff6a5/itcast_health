<?xml version="1.0" encoding="utf-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >
<!--指定namespace-->
<mapper namespace="com.itheima.health.dao.CheckGroupDao">

    <select id="findAll" resultType="com.itheima.health.pojo.CheckGroup">
        select * from t_checkgroup
    </select>

    <!--根据setmealId查询对应的checkgroup-->
    <select id="findCheckGroupListBySetmealId" parameterType="int" resultType="checkgroup">
        SELECT * FROM `t_checkgroup` WHERE `id` IN(SELECT `checkgroup_id` FROM `t_setmeal_checkgroup` WHERE `setmeal_id`=18)
    </select>

</mapper>
